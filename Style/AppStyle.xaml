<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
     <!--#65e6b5 бирзовый
        #7465e6 сний
        #e66596 розовый
        #d7e665 жёлтый-->
    <LinearGradientBrush x:Key="winBrush"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#7465e6"
                      Offset="0.8"/>
        <GradientStop Color="#65e6b5"
                      Offset="1.2"
                      />

    </LinearGradientBrush>
    <Style TargetType="{x:Type Window}" x:Key="winSt">
        <Setter Property="Background" Value="{StaticResource winBrush}"/>
       

    </Style>
    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground"
                Value="White"/>
        <Setter Property="FontFamily"
                Value="Times New Roman"/>
    </Style>
    
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Width" 
                Value="200"/>
        <Setter Property="Height" 
                Value="25"/>
    </Style>
    
    <Style TargetType="PasswordBox" x:Key="pbSt">
        <Setter Property="Width" 
                Value="200"/>
        <Setter Property="Height" 
                Value="25"/>
    </Style>
</ResourceDictionary>